@{
  Layout = "_Layout";
}

@using BakeryVendor.Models;

<h1>Vendors</h1>

@if (@Model.Count == 0)
{
  <h3>There are currently zero vendors to display.</h3>
} 

@foreach (Vendor vendor in Model)
{
  <h3><a href='/vendors/@vendor.Id'>@vendor.VendorName</a></h3>
}

<p>Pierre, woud you like to return to the <a href='/'>main screen?</a></p>