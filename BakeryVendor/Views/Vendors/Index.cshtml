@{
  Layout = "_Layout";
}

@using BakeryVendor.Models;

<div class="container">
  <div class="vendorListHeader">
    <h1>Vendors</h1>
  </div>
  <div class="vendorList">
    @if (@Model.Count == 0)
    {
      <h3>There are currently zero vendors to display.</h3>
    } 

    @foreach (Vendor vendor in Model)
    {
      <h3>🥐<a href='/vendors/@vendor.Id'>@vendor.VendorName</a></h3>
    }
  </div>
  <div class="vendorReturnHome">
    <p>Pierre, woud you like to return to the <a class="homeButton" href='/'>main screen?</a></p>
  </div>
  <img src="~/img/bakerylogo.png">
</div>